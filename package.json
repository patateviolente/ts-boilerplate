{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "Typescript boilerplate and tests",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "npm run build",
    "start": "node .",
    "lint": "./node_modules/tslint/bin/tslint './src/**/*.ts'",
    "test": "./node_modules/mocha/bin/mocha",
    "coverage": "./node_modules/nyc/bin/nyc.js ./node_modules/mocha/bin/mocha",
    "coverage-html": "./node_modules/nyc/bin/nyc.js --reporter=html ./node_modules/mocha/bin/mocha",
    "build": "npm run build-ts",
    "build-ts": "./node_modules/typescript/bin/tsc",
    "watch-ts": "./node_modules/typescript/bin/tsc -w"
  },
  "author": "wildpotato",
  "dependencies": {},
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.10.2",
    "@types/sinon-chai": "^3.2.4",
    "@types/sinon-express-mock": "^1.3.8",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "jsdom": "^16.4.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.0.2"
  },
  "nyc": {
    "all": true,
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/**/*"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
